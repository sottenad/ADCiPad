<h1>Listing orders</h1>

<table>
  <tr>
  	<th>Name</th>
    <th>Vehicle</th>
    <th>Product ids</th>
    <th></th>

    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
  	<td>
  		<%if !order.user.nil? %>
  			<%= order.user.username %>
  		<% end %>
  	</td>
    <td><%= order.car.model %></td>
    <td>  
    	<% order.products.each do |o| %>
    		<%= o.name %>,	
    	<% end %>
    </td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

