<h1>Products <%= link_to 'New Product', new_product_path, :class=>"btn btn-primary" %></h1>

<table class="table table-hover table-bordered tablesorter">
  <thead>
  <tr>
    <th>Category</th>
    <th>Name</th>

    <th>Price</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% @products.each do |product| %>
  <tr>
    <td><%= product.category.name %></td>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= image_tag product.product_images.first.url(:thumb).to_s %></td>
    <td width="5%"><%= link_to 'Show', product %></td>
    <td width="5%"><%= link_to 'Edit', edit_product_path(product) %></td>
    <td width="5%"><%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br />


