<h1>Cars <%= link_to 'New Car', new_car_path, :class=>"btn btn-primary" %></h1>

<table class="table table-hover table-bordered tablesorter">
	<thead>
  <tr>
    <th data-placeholder="">Year</th>
    <th data-placeholder="">Make</th>
    <th data-placeholder="">Model</th>
    <th data-placeholder="">Trim</th>
    <th>Image</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>
	</thead>
<tbody>
<% @cars.each do |car| %>
  <tr>
    <td>
    	<% if(!car.year.year.nil?) %>
    		<%= car.year.year %>
    	<% end %>
    </td>
    <td>	
    	<% if(!car.make.nil?)%>
    	<%= car.make.name %>
    	<% end %>
    </td>
    <td><%= car.model %></td>
    <td><%= car.trim %></td>
    <td>
		<% if(!car.image.url.nil?) %>
			<%= image_tag car.image.url(:thumb).to_s %>
		<% end %>
	    
    </td>

    <td width="5%"><%= link_to 'Show', car %></td>
    <td width="5%"><%= link_to 'Edit', edit_car_path(car) %></td>
    <td width="5%"><%= link_to 'Destroy', car, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</tbody>
</table>


