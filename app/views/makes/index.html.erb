<h1>Makes <%= link_to 'New Make', new_make_path, :class => "btn btn-primary" %></h1>

<table class="table table-hover table-bordered">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @makes.each do |make| %>
  <tr>
    <td width="80%"><%= make.name %></td>
    <td><%= link_to 'Show', make %></td>
    <td><%= link_to 'Edit', edit_make_path(make) %></td>
    <td><%= link_to 'Destroy', make, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

